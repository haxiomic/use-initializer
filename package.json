{
  "name": "use-initializer",
  "version": "1.0.0",
  "description": "A React hook for once-only initialization with dependency tracking and cleanup",
  "author": "haxiomic (George Corney)",
  "license": "MIT",
  "keywords": [
    "react",
    "hook",
    "initializer",
    "typescript",
    "react-hooks"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "http://github.com/haxiomic/use-initializer"
  },

