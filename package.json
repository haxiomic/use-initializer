    "./**/*.tsx": "./dist/**/*.tsx",
    "./*.js": "./dist/*.js",
    "./**/*.js": "./dist/**/*.js",
    "./*.ts": "./dist/*.ts",
    "./**/*.ts": "./dist/**/*.ts"
